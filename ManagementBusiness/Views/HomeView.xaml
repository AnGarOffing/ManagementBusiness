<UserControl x:Class="ManagementBusiness.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ManagementBusiness.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Logo y Título Principal -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Fwebsy" 
                           FontSize="42" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource AccentColor}"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Sistema de Gestión Empresarial Integral" 
                           FontSize="20" 
                           Foreground="{StaticResource TextSecondary}"/>
            </StackPanel>

            <Border Grid.Column="1"
                    Background="{StaticResource AccentColor}"
                    Width="120"
                    Height="120"
                    CornerRadius="60">
                <TextBlock Text="🏢"
                           FontSize="60"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Tarjetas de Estadísticas -->
        <Grid Grid.Row="1" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Tarjeta de Clientes -->
            <Border Grid.Column="0" 
                    Style="{StaticResource CardStyle}" 
                    Margin="0,0,15,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                                 <Border Background="{StaticResource AccentColor}" 
                                 Width="40" Height="40" 
                                 CornerRadius="8">
                             <TextBlock Text="👥" 
                                        Style="{StaticResource StatsCardIconStyle}"/>
                         </Border>
                         <StackPanel Margin="15,0,0,0">
                             <TextBlock Text="Total Clientes" 
                                        Style="{StaticResource StatsCardTitleStyle}"/>
                             <TextBlock Text="1,247" 
                                        Style="{StaticResource StatsCardNumberStyle}"/>
                         </StackPanel>
                     </StackPanel>
                     <TextBlock Text="+12% este mes" 
                                Style="{StaticResource StatsCardPercentageStyle}"
                                Foreground="{StaticResource SuccessColor}"/>
                </StackPanel>
            </Border>

            <!-- Tarjeta de Productos -->
            <Border Grid.Column="1" 
                    Style="{StaticResource CardStyle}" 
                    Margin="7,0,7,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                                 <Border Background="{StaticResource SuccessColor}" 
                                 Width="40" Height="40" 
                                 CornerRadius="8">
                             <TextBlock Text="📦" 
                                        Style="{StaticResource StatsCardIconStyle}"/>
                         </Border>
                         <StackPanel Margin="15,0,0,0">
                             <TextBlock Text="Productos Activos" 
                                        Style="{StaticResource StatsCardTitleStyle}"/>
                             <TextBlock Text="856" 
                                        Style="{StaticResource StatsCardNumberStyle}"/>
                         </StackPanel>
                     </StackPanel>
                     <TextBlock Text="+8% este mes" 
                                Style="{StaticResource StatsCardPercentageStyle}"
                                Foreground="{StaticResource SuccessColor}"/>
                </StackPanel>
            </Border>

            <!-- Tarjeta de Ventas -->
            <Border Grid.Column="2" 
                    Style="{StaticResource CardStyle}" 
                    Margin="7,0,7,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                                 <Border Background="{StaticResource WarningColor}" 
                                 Width="40" Height="40" 
                                 CornerRadius="8">
                             <TextBlock Text="💰" 
                                        Style="{StaticResource StatsCardIconStyle}"/>
                         </Border>
                         <StackPanel Margin="15,0,0,0">
                             <TextBlock Text="Ventas del Mes" 
                                        Style="{StaticResource StatsCardTitleStyle}"/>
                             <TextBlock Text="$45,230" 
                                        Style="{StaticResource StatsCardNumberStyle}"/>
                         </StackPanel>
                     </StackPanel>
                     <TextBlock Text="+15% este mes" 
                                Style="{StaticResource StatsCardPercentageStyle}"
                                Foreground="{StaticResource SuccessColor}"/>
                </StackPanel>
            </Border>

            <!-- Tarjeta de Pedidos -->
            <Border Grid.Column="3" 
                    Style="{StaticResource CardStyle}" 
                    Margin="15,0,0,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                                 <Border Background="{StaticResource ErrorColor}" 
                                 Width="40" Height="40" 
                                 CornerRadius="8">
                             <TextBlock Text="📋" 
                                        Style="{StaticResource StatsCardIconStyle}"/>
                         </Border>
                         <StackPanel Margin="15,0,0,0">
                             <TextBlock Text="Pedidos Pendientes" 
                                        Style="{StaticResource StatsCardTitleStyle}"/>
                             <TextBlock Text="23" 
                                        Style="{StaticResource StatsCardNumberStyle}"/>
                         </StackPanel>
                     </StackPanel>
                     <TextBlock Text="-5% este mes" 
                                Style="{StaticResource StatsCardPercentageStyle}"
                                Foreground="{StaticResource ErrorColor}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Contenido Principal -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel de Actividad Reciente -->
            <Border Grid.Column="0" 
                    Style="{StaticResource CardStyle}" 
                    Margin="0,0,15,0">
                <StackPanel>
                    <TextBlock Text="Actividad Reciente" 
                               Style="{StaticResource SectionTitleStyle}" 
                               Margin="0,0,0,20"/>
                    
                    <ItemsControl>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Border Background="{StaticResource BorderColor}" 
                                            Height="1" 
                                            Margin="0,0,0,15"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <Border Background="{StaticResource AccentColor}" 
                                                Width="8" Height="8" 
                                                CornerRadius="4" 
                                                Margin="0,0,15,0"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="17"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       Foreground="{StaticResource TextSecondary}" 
                                                       FontSize="15"/>
                                            <TextBlock Text="{Binding Time}" 
                                                       Foreground="{StaticResource TextSecondary}" 
                                                       FontSize="13" 
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.Items>
                            <local:ActivityItem Title="Nuevo Cliente Registrado" 
                                               Description="Juan Pérez se ha registrado en el sistema" 
                                               Time="Hace 2 horas"/>
                            <local:ActivityItem Title="Pedido Completado" 
                                               Description="Pedido #1234 ha sido entregado exitosamente" 
                                               Time="Hace 4 horas"/>
                            <local:ActivityItem Title="Producto Agregado" 
                                               Description="Nuevo producto 'Laptop Gaming' agregado al catálogo" 
                                               Time="Hace 6 horas"/>
                            <local:ActivityItem Title="Pago Recibido" 
                                               Description="Pago de $1,200 recibido por factura #5678" 
                                               Time="Hace 8 horas"/>
                        </ItemsControl.Items>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Panel de Acciones Rápidas -->
            <Border Grid.Column="1" 
                    Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Acciones Rápidas" 
                               Style="{StaticResource SectionTitleStyle}" 
                               Margin="0,0,0,20"/>
                    
                    <Button Style="{StaticResource NavigationButtonStyle}" 
                            Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                            CommandParameter="Customers"
                            Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="➕" FontSize="19" Margin="0,0,10,0"/>
                            <TextBlock Text="Nuevo Cliente" FontSize="17"/>
                        </StackPanel>
                    </Button>

                <Button Style="{StaticResource NavigationButtonStyle}" 
                        Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                        CommandParameter="Products"
                        Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📦" FontSize="19" Margin="0,0,10,0"/>
                        <TextBlock Text="Agregar Producto" FontSize="17"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource NavigationButtonStyle}" 
                        Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                        CommandParameter="Orders"
                        Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📋" FontSize="19" Margin="0,0,10,0"/>
                        <TextBlock Text="Crear Pedido" FontSize="17"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource NavigationButtonStyle}" 
                        Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                        CommandParameter="Transactions"
                        Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💰" FontSize="19" Margin="0,0,10,0"/>
                        <TextBlock Text="Registrar Venta" FontSize="17"/>
                    </StackPanel>
                </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
