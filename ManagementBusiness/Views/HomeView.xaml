<UserControl x:Class="ManagementBusiness.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ManagementBusiness.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Logo y T칤tulo Principal -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Fwebsy" 
                           FontSize="42" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource AccentColor}"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Sistema de Gesti칩n Empresarial Integral" 
                           FontSize="20" 
                           Foreground="{StaticResource TextSecondary}"/>
            </StackPanel>

            <Image Grid.Column="1"
                   Source="pack://application:,,,/Resources/Images/Logo.png"
                   Width="140"
                   Height="140"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Stretch="Uniform"
                   Margin="0,0,0,0"/>
        </Grid>

        <!-- Tarjetas de Estad칤sticas -->
        <Grid Grid.Row="1" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Tarjeta de Clientes -->
            <Border Grid.Column="0" 
                    Style="{StaticResource CardStyle}" 
                    Margin="0,0,15,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                                 <Border Background="{StaticResource AccentColor}" 
                                 Width="40" Height="40" 
                                 CornerRadius="8">
                             <TextBlock Text="游논" 
                                        Style="{StaticResource StatsCardIconStyle}"/>
                         </Border>
                         <StackPanel Margin="15,0,0,0">
                             <TextBlock Text="Total Clientes" 
                                        Style="{StaticResource StatsCardTitleStyle}"/>
                             <TextBlock Text="1,247" 
                                        Style="{StaticResource StatsCardNumberStyle}"/>
                         </StackPanel>
                     </StackPanel>
                     <TextBlock Text="+12% este mes" 
                                Style="{StaticResource StatsCardPercentageStyle}"
                                Foreground="{StaticResource SuccessColor}"/>
                </StackPanel>
            </Border>

            <!-- Tarjeta de Productos -->
            <Border Grid.Column="1" 
                    Style="{StaticResource CardStyle}" 
                    Margin="7,0,7,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                                 <Border Background="{StaticResource SuccessColor}" 
                                 Width="40" Height="40" 
                                 CornerRadius="8">
                             <TextBlock Text="游닍" 
                                        Style="{StaticResource StatsCardIconStyle}"/>
                         </Border>
                         <StackPanel Margin="15,0,0,0">
                             <TextBlock Text="Productos Activos" 
                                        Style="{StaticResource StatsCardTitleStyle}"/>
                             <TextBlock Text="856" 
                                        Style="{StaticResource StatsCardNumberStyle}"/>
                         </StackPanel>
                     </StackPanel>
                     <TextBlock Text="+8% este mes" 
                                Style="{StaticResource StatsCardPercentageStyle}"
                                Foreground="{StaticResource SuccessColor}"/>
                </StackPanel>
            </Border>

            <!-- Tarjeta de Ventas -->
            <Border Grid.Column="2" 
                    Style="{StaticResource CardStyle}" 
                    Margin="7,0,7,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                                 <Border Background="{StaticResource WarningColor}" 
                                 Width="40" Height="40" 
                                 CornerRadius="8">
                             <TextBlock Text="游눯" 
                                        Style="{StaticResource StatsCardIconStyle}"/>
                         </Border>
                         <StackPanel Margin="15,0,0,0">
                             <TextBlock Text="Ventas del Mes" 
                                        Style="{StaticResource StatsCardTitleStyle}"/>
                             <TextBlock Text="$45,230" 
                                        Style="{StaticResource StatsCardNumberStyle}"/>
                         </StackPanel>
                     </StackPanel>
                     <TextBlock Text="+15% este mes" 
                                Style="{StaticResource StatsCardPercentageStyle}"
                                Foreground="{StaticResource SuccessColor}"/>
                </StackPanel>
            </Border>

            <!-- Tarjeta de Pedidos -->
            <Border Grid.Column="3" 
                    Style="{StaticResource CardStyle}" 
                    Margin="15,0,0,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                                 <Border Background="{StaticResource ErrorColor}" 
                                 Width="40" Height="40" 
                                 CornerRadius="8">
                             <TextBlock Text="游늶" 
                                        Style="{StaticResource StatsCardIconStyle}"/>
                         </Border>
                         <StackPanel Margin="15,0,0,0">
                             <TextBlock Text="Pedidos Pendientes" 
                                        Style="{StaticResource StatsCardTitleStyle}"/>
                             <TextBlock Text="23" 
                                        Style="{StaticResource StatsCardNumberStyle}"/>
                         </StackPanel>
                     </StackPanel>
                     <TextBlock Text="-5% este mes" 
                                Style="{StaticResource StatsCardPercentageStyle}"
                                Foreground="{StaticResource ErrorColor}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Contenido Principal -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel de Actividad Reciente -->
            <Border Grid.Column="0" 
                    Style="{StaticResource CardStyle}" 
                    Margin="0,0,15,0">
                <StackPanel>
                    <TextBlock Text="Actividad Reciente" 
                               Style="{StaticResource SectionTitleStyle}" 
                               Margin="0,0,0,20"/>
                    
                    <ItemsControl>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Border Background="{StaticResource BorderColor}" 
                                            Height="1" 
                                            Margin="0,0,0,15"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <Border Background="{StaticResource AccentColor}" 
                                                Width="8" Height="8" 
                                                CornerRadius="4" 
                                                Margin="0,0,15,0"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="17"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       Foreground="{StaticResource TextSecondary}" 
                                                       FontSize="15"/>
                                            <TextBlock Text="{Binding Time}" 
                                                       Foreground="{StaticResource TextSecondary}" 
                                                       FontSize="13" 
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.Items>
                            <local:ActivityItem Title="Nuevo Cliente Registrado" 
                                               Description="Juan P칠rez se ha registrado en el sistema" 
                                               Time="Hace 2 horas"/>
                            <local:ActivityItem Title="Pedido Completado" 
                                               Description="Pedido #1234 ha sido entregado exitosamente" 
                                               Time="Hace 4 horas"/>
                            <local:ActivityItem Title="Producto Agregado" 
                                               Description="Nuevo producto 'Laptop Gaming' agregado al cat치logo" 
                                               Time="Hace 6 horas"/>
                            <local:ActivityItem Title="Pago Recibido" 
                                               Description="Pago de $1,200 recibido por factura #5678" 
                                               Time="Hace 8 horas"/>
                        </ItemsControl.Items>
                    </ItemsControl>
                </StackPanel>
            </Border>

                         <!-- Panel de Acciones R치pidas -->
             <Border Grid.Column="1" 
                     Style="{StaticResource CardStyle}">
                 <StackPanel>
                     <TextBlock Text="Acciones R치pidas" 
                                Style="{StaticResource SectionTitleStyle}" 
                                Margin="0,0,0,20"/>
                     
                     <!-- Grid de Acciones R치pidas Moderno -->
                     <Grid>
                         <Grid.RowDefinitions>
                             <RowDefinition Height="Auto"/>
                             <RowDefinition Height="Auto"/>
                         </Grid.RowDefinitions>
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="*"/>
                         </Grid.ColumnDefinitions>

                         <!-- Nueva Acci칩n: Cliente -->
                         <Button Grid.Row="0" Grid.Column="0"
                                 Style="{StaticResource QuickActionButtonStyle}"
                                 Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                 CommandParameter="Customers"
                                 Margin="0,0,8,8">
                             <Grid>
                                 <Grid.RowDefinitions>
                                     <RowDefinition Height="Auto"/>
                                     <RowDefinition/>
                                 </Grid.RowDefinitions>
                                 <TextBlock Text="游논" 
                                            FontSize="48" 
                                            Grid.Row="0" 
                                            HorizontalAlignment="Center" 
                                            Margin="20,20,20,15"/>
                                 <TextBlock Grid.Row="1" 
                                            Text="Nuevo Cliente" 
                                            Foreground="White" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Margin="20,0,20,20"/>
                             </Grid>
                         </Button>

                         <!-- Nueva Acci칩n: Producto -->
                         <Button Grid.Row="0" Grid.Column="1"
                                 Style="{StaticResource QuickActionButtonStyle}"
                                 Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                 CommandParameter="Products"
                                 Margin="8,0,0,8">
                             <Grid>
                                 <Grid.RowDefinitions>
                                     <RowDefinition Height="Auto"/>
                                     <RowDefinition/>
                                 </Grid.RowDefinitions>
                                 <TextBlock Text="游닍" 
                                            FontSize="48" 
                                            Grid.Row="0" 
                                            HorizontalAlignment="Center" 
                                            Margin="20,20,20,15"/>
                                 <TextBlock Grid.Row="1" 
                                            Text="Agregar Producto" 
                                            Foreground="White" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Margin="20,0,20,20"/>
                             </Grid>
                         </Button>

                         <!-- Nueva Acci칩n: Pedido -->
                         <Button Grid.Row="1" Grid.Column="0"
                                 Style="{StaticResource QuickActionButtonStyle}"
                                 Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                 CommandParameter="Orders"
                                 Margin="0,8,8,0">
                             <Grid>
                                 <Grid.RowDefinitions>
                                     <RowDefinition Height="Auto"/>
                                     <RowDefinition/>
                                 </Grid.RowDefinitions>
                                 <TextBlock Text="游늶" 
                                            FontSize="48" 
                                            Grid.Row="0" 
                                            HorizontalAlignment="Center" 
                                            Margin="20,20,20,15"/>
                                 <TextBlock Grid.Row="1" 
                                            Text="Crear Pedido" 
                                            Foreground="White" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Margin="20,0,20,20"/>
                             </Grid>
                         </Button>

                         <!-- Nueva Acci칩n: Venta -->
                         <Button Grid.Row="1" Grid.Column="1"
                                 Style="{StaticResource QuickActionButtonStyle}"
                                 Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                 CommandParameter="Transactions"
                                 Margin="8,8,0,0">
                             <Grid>
                                 <Grid.RowDefinitions>
                                     <RowDefinition Height="Auto"/>
                                     <RowDefinition/>
                                 </Grid.RowDefinitions>
                                 <TextBlock Text="游눯" 
                                            FontSize="48" 
                                            Grid.Row="0" 
                                            HorizontalAlignment="Center" 
                                            Margin="20,20,20,15"/>
                                 <TextBlock Grid.Row="1" 
                                            Text="Registrar Venta" 
                                            Foreground="White" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Margin="20,0,20,20"/>
                             </Grid>
                         </Button>
                     </Grid>
                 </StackPanel>
             </Border>
        </Grid>
    </Grid>
</UserControl>
