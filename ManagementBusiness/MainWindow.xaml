<Window x:Class="ManagementBusiness.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:ManagementBusiness"
         xmlns:converters="clr-namespace:ManagementBusiness.Converters"
         xmlns:views="clr-namespace:ManagementBusiness.Views"
         mc:Ignorable="d"
         Title="Management Business Dashboard" 
         Height="900" Width="1400"
         WindowStartupLocation="CenterScreen"
         WindowState="Maximized"
         Background="{StaticResource PrimaryBackground}"
         ResizeMode="CanResize"
         MinHeight="700" MinWidth="1000">
    
    <Window.Resources>
        <!-- Convertidor para colores -->
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        
        <!-- Iconos vectoriales -->
        <Geometry x:Key="HomeIcon">M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6</Geometry>
        <Geometry x:Key="CustomerIcon">M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z</Geometry>
        <Geometry x:Key="ProductsIcon">M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4</Geometry>
        <Geometry x:Key="OrdersIcon">M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2</Geometry>
        <Geometry x:Key="TransactionsIcon">M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1</Geometry>
        <Geometry x:Key="ShipmentsIcon">M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 00-1-1H2m8 1a1 1 0 011 1v6a1 1 0 01-1 1z</Geometry>
        <Geometry x:Key="SettingsIcon">M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z</Geometry>
        <Geometry x:Key="LogoutIcon">M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1</Geometry>
    </Window.Resources>

    <Grid>
        <!-- Sidebar -->
        <Border Width="280" 
                Background="{StaticResource SidebarBackground}" 
                HorizontalAlignment="Left">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header del Sidebar -->
                <Border Grid.Row="0" 
                        Background="{StaticResource AccentColor}" 
                        Height="80" 
                        CornerRadius="0,0,20,0">
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                Margin="20,0">
                        <TextBlock Text="MB" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="Dashboard" 
                                   FontSize="16" 
                                   Foreground="White" 
                                   Margin="10,0,0,0" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Menú de Navegación -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto" 
                              Margin="15,20,15,20">
                    <StackPanel>
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Command="{Binding NavigateCommand}" 
                                CommandParameter="Home"
                                Tag="Home"
                                Margin="0,0,0,18">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Path Data="{StaticResource HomeIcon}" 
                                      Fill="White"
                                      Width="36" Height="36" 
                                      Stretch="Uniform"
                                      Grid.Column="0"/>
                                                                 <TextBlock Text="Inicio" 
                                            Grid.Column="1"
                                            Margin="15,0,0,0" 
                                            VerticalAlignment="Center"
                                            Style="{StaticResource SidebarTextBlockStyle}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Command="{Binding NavigateCommand}" 
                                CommandParameter="Customers"
                                Tag="Customers"
                                Margin="0,0,0,18">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Path Data="{StaticResource CustomerIcon}" 
                                      Fill="White"
                                      Width="36" Height="36" 
                                      Stretch="Uniform"
                                      Grid.Column="0"/>
                                                                 <TextBlock Text="Clientes" 
                                            Grid.Column="1"
                                            Margin="15,0,0,0" 
                                            VerticalAlignment="Center"
                                            Style="{StaticResource SidebarTextBlockStyle}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Command="{Binding NavigateCommand}" 
                                CommandParameter="Products"
                                Tag="Products"
                                Margin="0,0,0,18">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Path Data="{StaticResource ProductsIcon}" 
                                      Fill="White"
                                      Width="36" Height="36" 
                                      Stretch="Uniform"
                                      Grid.Column="0"/>
                                                                 <TextBlock Text="Productos" 
                                            Grid.Column="1"
                                            Margin="15,0,0,0" 
                                            VerticalAlignment="Center"
                                            Style="{StaticResource SidebarTextBlockStyle}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Command="{Binding NavigateCommand}" 
                                CommandParameter="Orders"
                                Tag="Orders"
                                Margin="0,0,0,18">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Path Data="{StaticResource OrdersIcon}" 
                                      Fill="White"
                                      Width="36" Height="36" 
                                      Stretch="Uniform"
                                      Grid.Column="0"/>
                                                                 <TextBlock Text="Pedidos" 
                                            Grid.Column="1"
                                            Margin="15,0,0,0" 
                                            VerticalAlignment="Center"
                                            Style="{StaticResource SidebarTextBlockStyle}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Command="{Binding NavigateCommand}" 
                                CommandParameter="Transactions"
                                Tag="Transactions"
                                Margin="0,0,0,18">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Path Data="{StaticResource TransactionsIcon}" 
                                      Fill="White"
                                      Width="36" Height="36" 
                                      Stretch="Uniform"
                                      Grid.Column="0"/>
                                                                 <TextBlock Text="Transacciones" 
                                            Grid.Column="1"
                                            Margin="15,0,0,0" 
                                            VerticalAlignment="Center"
                                            Style="{StaticResource SidebarTextBlockStyle}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Command="{Binding NavigateCommand}" 
                                CommandParameter="Shipments"
                                Tag="Shipments"
                                Margin="0,0,0,18">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Path Data="{StaticResource ShipmentsIcon}" 
                                      Fill="White"
                                      Width="36" Height="36" 
                                      Stretch="Uniform"
                                      Grid.Column="0"/>
                                                                 <TextBlock Text="Envíos" 
                                            Grid.Column="1"
                                            Margin="15,0,0,0" 
                                            VerticalAlignment="Center"
                                            Style="{StaticResource SidebarTextBlockStyle}"/>
                            </Grid>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Command="{Binding NavigateCommand}" 
                                CommandParameter="Settings"
                                Tag="Settings"
                                Margin="0,0,0,18">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Path Data="{StaticResource SettingsIcon}" 
                                      Fill="White"
                                      Width="36" Height="36" 
                                      Stretch="Uniform"
                                      Grid.Column="0"/>
                                                                 <TextBlock Text="Configuración" 
                                            Grid.Column="1"
                                            Margin="15,0,0,0" 
                                            VerticalAlignment="Center"
                                            Style="{StaticResource SidebarTextBlockStyle}"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                                 <!-- Botón de Salir -->
                 <Button Grid.Row="2" 
                         Style="{StaticResource SidebarButtonStyle}"
                         Command="{Binding LogoutCommand}"
                         Margin="15,15,15,20"
                         HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                                                 <Image Source="pack://application:,,,/Resources/Images/Close_Session.png"
                                Width="40" Height="40" 
                                Stretch="Uniform"
                                Grid.Column="0"/>
                         <TextBlock Text="Salir" 
                                    Grid.Column="1"
                                    Margin="15,0,0,0" 
                                    VerticalAlignment="Center"
                                    FontWeight="Medium"
                                    FontSize="24"/>
                    </Grid>
                </Button>
            </Grid>
        </Border>

        <!-- Contenido Principal -->
        <Grid Margin="280,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Principal -->
            <Border Grid.Row="0" 
                    Background="{StaticResource SecondaryBackground}" 
                    Height="80" 
                    CornerRadius="0,0,0,20"
                    Effect="{x:Null}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" 
                                VerticalAlignment="Center" 
                                Margin="30,0">
                        <TextBlock Text="{Binding CurrentPageTitle}" 
                                   Style="{StaticResource SectionTitleStyle}" 
                                   Margin="0"/>
                        <TextBlock Text="{Binding CurrentPageSubtitle}" 
                                   Style="{StaticResource SubtitleStyle}" 
                                   Margin="0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                Margin="0,0,30,0">
                        <!-- Icono de usuario -->
                        <Border Background="{StaticResource AccentColor}" 
                                Width="40" Height="40" 
                                CornerRadius="20" 
                                Margin="0,0,15,0">
                            <TextBlock Text="👤" 
                                       FontSize="20"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                                                 <StackPanel VerticalAlignment="Center">
                             <TextBlock Text="Bienvenido," 
                                        Foreground="{StaticResource TextSecondary}" 
                                        FontSize="16"
                                        VerticalAlignment="Center"/>
                             <TextBlock Text="Usuario" 
                                        FontWeight="SemiBold" 
                                        FontSize="18"
                                        Margin="0,2,0,0" 
                                        VerticalAlignment="Center"/>
                         </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Área de Contenido -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          Margin="30,20,30,30">
                <ContentControl Content="{Binding CurrentView}"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
